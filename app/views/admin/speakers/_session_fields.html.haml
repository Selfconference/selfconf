.well.nested-fields

  .form-group
    =f.label :event_id, class: 'col-sm-2 control-label'
    .col-sm-10
      =f.select :event_id, Event.all.collect { |e| [ "#{e.name} #{e.start_date.strftime("%Y")}", e.id ] }, {class: 'form-control'}

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :keynote, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select(:keynote, options_for_select([["No", false], ["Yes", true]], f.object.keynote), {}, {class: 'form-control'})

  .form-group
    = f.label :selected, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select(:selected, options_for_select([["No", false], ["Yes", true]], f.object.selected), {}, {class: 'form-control'})

  .form-group
    = f.label :abstract, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :abstract, class: 'form-control'

  .form-group
    = f.label :room_id, "Room", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :room_id, @event.rooms.collect { |r| [ r.name, r.id ] }, {include_blank: "--"}, {class: 'form-control'}

  .form-group
    = f.label :slot, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :slot_id, @event.slots.collect { |s| [ s.time, s.id ] }, {include_blank: "--"}, {class: 'form-control'}

  .form-group
    .col-sm-12
      = link_to_remove_association "remove session", f, class: "pull-right btn small-button red-button"
