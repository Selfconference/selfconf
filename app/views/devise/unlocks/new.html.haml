= render partial: "shared/header", event: @event

.mid_block
  .container
    .row
      .col-md-12
        %h4 Resend unlock instructions

        = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f|
          = devise_error_messages!

          .form-group
            = f.label :email, class: 'col-sm-2 control-label'
            .col-sm-10
              = f.email_field :email, autofocus: true, class: 'form-control'

          .form-group
            .col-sm-offset-2.col-sm-10
              = f.submit "Resend unlock instructions", class: 'btn button orange-button'

              = render "devise/shared/links"
