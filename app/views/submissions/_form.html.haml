= form_for [@submission], html: {class: 'form-horizontal'} do |f|
  = render 'shared/error_messages', object: f.object

  .form-group
    = f.label :talkname, "Title", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :talkname, class: 'form-control'

  .form-group
    = f.label :abstract, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :abstract, class: 'form-control', rows: 10

  .form-group
    = f.label :talktype, "Type of Talk", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select(:talktype, options_for_select([["People Talk", "people"], ["Technical Talk", "tech"]], f.object.talktype))

  .form-group
    = f.label :notes, "Notes to the panel", class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :notes, class: 'form-control', rows: 10

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Submit", class: "btn button orange-button"
      = link_to "Cancel", submissions_path, class: "btn button orange-button"
