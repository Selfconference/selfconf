#main-nav.navbar.navbar-default
  .container
    .row
      .col-md-12
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#menu", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        #menu.navbar-collapse.collapse
          %ul.navbar-nav.nav
            %li
              %a{:href => "/"} home
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                menu
                %span.caret
              %ul.dropdown-menu{:role => "menu"}
                %li= link_to "location", event_path(@event) + "#location"
                %li= link_to "sponsor", sponsor_event_path(@event)
                %li= link_to "code of conduct", coc_event_path(@event)
                %li= link_to "organizers", event_path(@event) + "#organizers"
          %a.navbar-link.navbar-right{:href => "http://lanyrd.com/profile/selfconf/"}
            =image_tag "lanyrd.png", {class: "social navbar-text"}
          %a.navbar-link.navbar-right{:href => "http://twitter.com/selfconference"}
            =image_tag "twitter.png", {class: "social navbar-text"}
