.flashes_block.logged-in
  .container
    .row
      .col-md-12
        .pull-right
          - if user_signed_in?
            Hello,
            = succeed " " do
              = link_to current_user.name, edit_user_registration_path
            = surround "(",")" do
              = link_to "Log out", destroy_user_session_path, method: :delete
    .row
      .col-md-12
        .pull-right
          - if current_user.admin?
            = link_to "Admin Page", admin_submissions_path
          %br
          - if current_user.selector?
            = link_to "Vote on Submissions", selection_submissions_path
