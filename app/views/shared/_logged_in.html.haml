- if user_signed_in?
  %ul.navbar-nav.nav.navbar-link.navbar-right
    %li.dropdown
      %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
        = "Hello, #{current_user.name}"
        %span.caret
      %ul.dropdown-menu{:role => "menu"}
        %li= link_to "your submissions", submissions_path
        %li= link_to "admin page", admin_path if current_user.admin?
        %li= link_to "vote on submissions", selection_submissions_path if current_user.selector?
        %li.divider{role: "separator"}
        %li= link_to "edit your profile", edit_user_registration_path
        %li= link_to "logout", destroy_user_session_path, method: :delete
- else
  %ul.navbar-nav.nav.navbar-link.navbar-right
    %li
      = link_to "Login", new_user_session_path
