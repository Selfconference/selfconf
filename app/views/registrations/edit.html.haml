= render partial: "shared/header", event: @event

.mid_block
  .container
    .row
      .col-md-12
        %h4 Edit your profile

        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          = f.label :name
          = f.text_field :name, class: 'form-control'

          = f.label :twitter
          = f.text_field :twitter, class: 'form-control'

          = f.label :bio
          = f.text_area :bio, class: 'form-control'

          = f.label :headshot, "Headshot URL"
          = f.url_field :headshot, class: 'form-control'

          = f.label :email
          = f.email_field :email, autofocus: true, class: 'form-control'

          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div= "Currently waiting confirmation for: #{resource.unconfirmed_email}"

          = f.label :password
          %em (leave blank if you don't want to change it)
          - if @minimum_password_length
            %em= "(#{@minimum_password_length} characters minimum)"
          %br
          = f.password_field :password, autocomplete: "off", class: 'form-control'

          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

          = f.label :current_password
          %em (we need your current password to confirm your changes)
          = f.password_field :current_password, autocomplete: "off", class: 'form-control'

          = f.submit "Update profile", class: "btn orange-btn"
          = link_to "Cancel", :back, class: "btn orange-btn"
