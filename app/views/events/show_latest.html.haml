              %a{:href => "http://www.eventbrite.com/r/etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} Event management
              %span{:style => "color:#ddd;"} for
              %a{:href => "https://selfconf2015.eventbrite.com/?ref=etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} self.conference 2015
              %span{:style => "color:#ddd;"} powered by
              %a{:href => "#{@event.tickets_link}?ref=etckt", :style => "color:#ddd; text-decoration:none;", :target => "_blank"} Eventbrite
%section#sponsors
  .color-line
    .colored_line_a>
    .colored_line_b>
    .colored_line_c>
    .colored_line_d>
    .colored_line_e>
  .blue_header
    .container
      .row
        .col-md-12
          %h1 sponsors
  .mid_block
    .container
      -@event.sponsor_levels.each do |sponsor_level|
        -unless sponsor_level.sponsors.empty?
          .row
            %h5= "#{sponsor_level.name} Sponsors"
            %ul.sponsors
              -sponsor_level.sponsors.each do |sponsor|
                %li.col-md-2
                  %a{:href => sponsor.link}
                    %img.img-responsive{:src => sponsor.photo}/

  %section#organizers
    .color-line
      .colored_line_a>
      .colored_line_b>
      .colored_line_c>
      .colored_line_d>
      .colored_line_e>
    .blue_header
      .container
        .row
          .col-md-12
            %h1 ORGANIZERS
    .blue_block
      .container
        .row
          -@event.organizers.each do |organizer|
            .col-md-4
              %img.img-polaroid.img-rounded.speaker-img{:src => organizer.photo}/
              %h4= organizer.name
              %p= raw organizer.bio
              %p
                ="Want to email #{organizer.name.split(" ").first}? Do it: "
                %a{:href => "mailto:#{organizer.email}"}= "@#{organizer.email}"
                ="."
                %a{:href => "http://twitter.com/#{organizer.twitter}"}= "@#{organizer.twitter}"
        .row
          .col-md-12
            .center-wrapper
              %p
                Not sure who to contact? Just reach out to us at
                %a{:href => "mailto:hello@selfconference.org"} hello@selfconference.org

