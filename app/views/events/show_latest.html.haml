.mid_block
  .container
    .row
      .col-md-7
        %h4= "What is #{@event.name}?"
        %p= @event.about

      .col-md-5
        .blue_block.sign-up-box
          #mc_embed_signup
            %form#mc-embedded-subscribe-form.validate.form-horizontal{:action => "//selfconference.us5.list-manage.com/subscribe/post?u=e629a43dedc6cbed53830761c&id=3dee572f6e", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
              #mc_embed_signup_scroll
                %h4 get email updates:
                .form-group
                  %label.col-sm-4.control-label{:for => "mce-EMAIL"}
                    Email
                    %span.asterisk *
                  .col-md-8
                    %input#mce-EMAIL.required.email.form-control{:name => "EMAIL", :type => "email", :value => ""}/
                .form-group
                  %label.col-sm-4.control-label{:for => "mce-FNAME"}
                    First Name
                    %span.asterisk *
                  .col-md-8
                    %input#mce-FNAME.required.form-control{:name => "FNAME", :type => "text", :value => ""}/
                .form-group
                  %label.col-sm-4.control-label{:for => "mce-LNAME"}
                    Last Name
                    %span.asterisk *
                  .col-md-8
                    %input#mce-LNAME.required.form-control{:name => "LNAME", :type => "text", :value => ""}/
                #mce-responses.clear
                  #mce-error-response.response{:style => "display:none"}
                  #mce-success-response.response{:style => "display:none"}
                %div{:style => "position: absolute; left: -5000px;"}
                  %input{:name => "b_e629a43dedc6cbed53830761c_3dee572f6e", :tabindex => "-1", :type => "text", :value => ""}/
                .center-wrapper
                  %button#mc-embedded-subscribe.sign-up{:name => "subscribe", :type => "submit", :value => "Subscribe"} Subscribe

%section#speakers
  .color-line
    .colored_line_a>
    .colored_line_b>
    .colored_line_c>
    .colored_line_d>
    .colored_line_e>
  .blue_header
    .container
      .row
        .col-md-12
          %h1 speakers
  .blue_block.keynote
    .container
      .row
        -@event.speakers.sample(4).each do |speaker|
          .col-md-3.main-page-speaker
            %a{:href => "sessions#speaker_#{speaker.id}"}
              %img.img-thumbnail.img-rounded.img-responsive.speaker-img{:src => speaker.photo}/
              %h4= speaker.name
              -speaker.sessions.each do |session|
                %p= session.name

%section#location
  .color-line
    .colored_line_a>
    .colored_line_b>
    .colored_line_c>
    .colored_line_d>
    .colored_line_e>
  .blue_header
    .container
      .row
        .col-md-12
          %h1 LOCATION
  .mid_block
    .container
      .row
        .col-md-12
          %h4= @event.venue.name
          %p= @event.venue.about
          %iframe{:frameborder => "0", :height => "450", :src => @event.venue.maps_link, :style => "border:0", :width => "100%"}
%section#tickets
  .color-line
    .colored_line_a>
    .colored_line_b>
    .colored_line_c>
    .colored_line_d>
    .colored_line_e>
  .blue_header
    .container
      .row
        .col-md-12
          %h1 TICKETS
  .blue_block
    .container
      .row
        .col-md-12
