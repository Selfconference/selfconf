%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:og" => "http://ogp.me/ns#"}
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:100,300,900", :rel => "stylesheet", :type => "text/css"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "self.conference", :property => "og:title"}/
    %meta{:content => "http://selfconference.org", :property => "og:url"}/
    %meta{:content => "http://selfconference.org/img/self.conf.avatar.png", :property => "og:image"}/
    %meta{:content => "self.conference", :property => "og:site_name"}/
    %meta{:content => "Self.conference is a mix of fantastic tech presentations and insightful soft talks in fabulous downtown Detroit May 29-30, 2015!", :property => "og:description"}/
