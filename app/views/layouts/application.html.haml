!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:og" => "http://ogp.me/ns#"}
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:100,300,900", :rel => "stylesheet", :type => "text/css"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "self.conference", :property => "og:title"}/
    %meta{:content => "http://selfconference.org", :property => "og:url"}/
    %meta{:content => image_tag "og.image.png", :property => "og:image"}/
    %meta{:content => "self.conference", :property => "og:site_name"}/
    %meta{:content => "Self.conference is a mix of fantastic tech presentations and insightful soft talks in fabulous downtown Detroit May 20-21, 2016!", :property => "og:description"}/
    %meta{:content => "Self.conference is a mix of fantastic tech presentations and insightful soft talks in fabulous downtown Detroit May 20-21, 2016!", :name => "description"}/
    %title= @title
    = csrf_meta_tags
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"
  %body{"data-spy" => "scroll", "data-target" => ".navbar"}
    = yield :nav
    .top_block
      .container
        .row
          .col-md-12
            %h1
              %span{:style => "font-weight:900"}> self.
              conference
            %ul.tag-line.lead
              = yield :subtitle

    = render partial: "shared/color_line"

    = render partial: "shared/flashes"
    = yield

    .container
      .row
        .col-md-12
          %a{:href => "http://twitter.com/selfconference"}
            =image_tag "twitter.png", {class: "footer-twitter"}


    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-48385814-1']);
      _gaq.push(['_trackPageview']);

      (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
